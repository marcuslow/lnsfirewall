# Environment Variables for Firewall Management System
# Copy this file to .env and fill in your values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# HQ Server Configuration
HQ_HOST=localhost
HQ_PORT=8000
HQ_DATABASE_PATH=hq_database.db

# Security
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=
API_KEY_REQUIRED=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=hq_server.log

# Email Alerts (optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
ALERT_EMAIL=

# Client Settings
CLIENT_TIMEOUT=120
MAX_LOG_DAYS=90